{
  "builds": [
    {
      "src": "backend/**/pom.xml",
      "use": "@railway/community/spring-boot",
      "env": {
        "SPRING_DATASOURCE_URL": "",
        "SPRING_PROFILES_ACTIVE": "prod"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@railway/community/react",
      "env": {
        "REACT_APP_API_URL": "https://your-backend-app.up.railway.app"
      }
    }
  ],
  "plugins": [
    {
      "src": "@railway/plugin-database",
      "database": "postgres"
    }
  ]
}
